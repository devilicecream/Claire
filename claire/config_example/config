[default]
pidfile=/etc/claire/claire.pid
interval=60

[reporter]
name=email
email=<your email>
smtp_username=<sender email>
smtp_password=<smtp password>
smtp_host=<smtp host>
smtp_port=<smtp port>
smtp_tls_enabled=<true|false>

# Standard python logging config format

[loggers]
keys=root,claire

[handlers]
keys=consoleHandler,logHandler

[formatters]
keys=claireFormatter

[logger_root]
level=ERROR
handlers=consoleHandler

[logger_claire]
level=DEBUG
handlers=consoleHandler
qualname=Claire
propagate=0

[handler_consoleHandler]
class=StreamHandler
level=DEBUG
formatter=claireFormatter
args=(sys.stdout,)

[handler_logHandler]
class=FileHandler
level=DEBUG
formatter=claireFormatter
args=('/var/log/claire/claire.log',)

[formatter_claireFormatter]
format=%(asctime)s - %(name)s - %(levelname)s - %(message)s
datefmt=
